{
  "name": "mysql-airflow-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "tasks.max": "1",

    "database.hostname": "host.docker.internal",
    "database.port": "3306",
    "database.user": "root",
    "database.password": "airflow",

    "database.server.id": "5401",
    "database.include.list": "airflow",

    "topic.prefix": "mysql_airflow",

    "snapshot.mode": "never",
    "include.schema.changes": "false",

    "schema.history.internal.kafka.bootstrap.servers": "kafka:29092",
    "schema.history.internal.kafka.topic": "schema_changes.mysql_airflow"
  }
}
